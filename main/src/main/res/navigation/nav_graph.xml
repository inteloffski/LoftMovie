<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">


    <fragment
        android:id="@+id/popularFragment"
        android:name="com.example.popular.presentation.PopularFragment"
        android:label="PopularFragment" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.search.presentation.SearchFragment"
        android:label="SearchFragment" />
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.example.favorite.presentation.FavoriteFragment"
        android:label="FavoriteFragment" />
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.splash.presentation.SplashFragment"
        android:label="SplashFragment">
        <action
            android:id="@+id/action_splashFragment_to_popularFragment"
            app:destination="@id/popularFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"
            app:exitAnim="@anim/slide_out_left"/>
    </fragment>

</navigation>